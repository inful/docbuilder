{
  "id": "docbuilder-preview",
  "version": "0.1.43",
  "name": "DocBuilder Preview",
  "description": "Installs DocBuilder with bundled Hugo and starts automatic documentation preview",
  "documentationURL": "https://github.com/inful/docbuilder",
  "licenseURL": "https://github.com/inful/docbuilder/blob/main/LICENSE",
  "options": {
    "version": {
      "type": "string",
      "default": "latest",
      "description": "DocBuilder version to install"
    },
    "previewPort": {
      "type": "string",
      "default": "1316",
      "description": "Port for preview server"
    },
    "docsDir": {
      "type": "string",
      "default": "./docs",
      "description": "Path to docs directory to preview (relative to workspace)"
    }
  },
  "containerEnv": {
    "PREVIEWPORT": "${previewPort}",
    "DOCSDIR": "${docsDir}",
    "WORKSPACE_FOLDER": "${containerWorkspaceFolder}"
  },
  "forwardPorts": [1316],
  "portsAttributes": {
    "1316": {
      "label": "DocBuilder Preview",
      "onAutoForward": "notify"
    }
  },
  "postCreateCommand": "/usr/local/bin/docbuilder-preview-start.sh"
}
