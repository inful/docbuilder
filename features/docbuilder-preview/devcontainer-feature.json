{
  "id": "docbuilder-preview",
  "version": "0.1.42",
  "name": "DocBuilder Preview",
  "description": "Installs DocBuilder with bundled Hugo and starts automatic documentation preview",
  "documentationURL": "https://github.com/inful/docbuilder",
  "licenseURL": "https://github.com/inful/docbuilder/blob/main/LICENSE",
  "options": {
    "version": {
      "type": "string",
      "default": "latest",
      "description": "DocBuilder version to install"
    },
    "previewPort": {
      "type": "string",
      "default": "1316",
      "description": "Port for preview server"
    },
    "docsDir": {
      "type": "string",
      "default": "./docs",
      "description": "Path to docs directory to preview"
    }
  },
  "forwardPorts": [1316],
  "portsAttributes": {
    "1316": {
      "label": "DocBuilder Preview",
      "onAutoForward": "notify"
    }
  },
  "postCreateCommand": "mkdir -p ${containerWorkspaceFolder}/${docsDir} && nohup docbuilder preview --docs-dir ${containerWorkspaceFolder}/${docsDir} --port ${previewPort} > /tmp/docbuilder-preview.log 2>&1 &"
}
