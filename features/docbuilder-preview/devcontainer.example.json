# Example: Using DocBuilder devcontainer feature in your project

{
  "name": "My Project with Documentation",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
  
  "features": {
    "ghcr.io/YOUR_ORG/devcontainer-features/docbuilder-preview:1": {
      "version": "latest",
      "previewPort": "1313"
    }
  },
  
  "forwardPorts": [1313],
  
  "portsAttributes": {
    "1313": {
      "label": "Documentation Preview",
      "onAutoForward": "openBrowser",
      "requireLocalPort": false
    }
  },
  
  "customizations": {
    "vscode": {
      "extensions": [
        "yzhang.markdown-all-in-one"
      ]
    }
  }
}
